#! /bin/bash

ARDLIB=/home/pi/arduino-1.8.10
ARDTTY=${2:-ttyACM0}

if [ $# -eq 0 ]; then
 echo "Use args compile, upload, upload_many, interact, update, listDevices"
fi

if [ "$1" = "compile" ]; then
 echo "Compiling Plummet"
 arduino-builder -hardware ${ARDLIB}/hardware -tools ${ARDLIB}/hardware/tools/avr -tools ${ARDLIB}/tools-builder -libraries ${ARDLIB}/libraries -fqbn arduino:avr:uno -prefs=compiler.path=${ARDLIB}/hardware/tools/avr/bin/ -prefs=tools.ctags.path=${ARDLIB}/tools-builder/ctags/5.8-arduino11 -build-path build Plummet.ino 
fi

if [ "$1" = "upload" ]; then
 echo "Uploading Plummet"
 screen -R -S Arduino0 -X quit
 ${ARDLIB}/hardware/tools/avr/bin/avrdude -C${ARDLIB}/hardware/tools/avr/etc/avrdude.conf -patmega328p -carduino -P/dev/${ARDTTY} -b115200 -Uflash:w:build/Plummet.ino.hex:i 
fi

if [ "$1" = "upload_many" ]; then
 echo "continuesly uploading to any arduino attached"

fi

if [ "$1" = "update" ]; then
 echo Updating app from the internet
 git pull
fi

if [ "$1" = "listCommands" ]; then
 cat Plummet.ino | grep "case '" | sed s/case\ \'//g | sed s_\':\ //_:_g | awk '{printf "%s\r\n", $0} END {printf "  <Ctrl+A+D>: Detach\r\n"}'
fi

if [ "$1" = "interact" ]; then
 $0 listCommands
 echo ""
 echo "Connecting:"

 command -v screen > /dev/null || sudo apt-get install screen
 command -v cu > /dev/null || sudo apt-get install cu
 $0 listCommands > `cat /tmp/screen`
 screen -R -S Arduino0 bash -c 'tty > /tmp/screen; '$0' listCommands; cu -l /dev/'${ARDTTY}' -s 38400'
 #screen -R -S Arduino0 bash -c 'tty > /tmp/screen; '$0' listCommands; tail -f /dev/'${ARDTTY}' &; cat > /dev/'${ARDTTY}
 # ~. to quit CU process
fi

#git clone https://github.com/adisharabani/Plummet
#sudo apt-get  install avahi-daemon

if [ "$1" = "listDevices" ]; then
 ls /dev/*[UA][SC][BM]*
fi

#stty -F /dev/${ARDTTY} cs8 38400 ignbrk -brkint -icrnl -imaxbel -opost -onlcr -isig -icanon -iexten -echo -echoe -echok -echoctl -echoke noflsh -ixon -crtscts

#cat >> /dev/${ARDTTY}
#sudo apt-get install cu


